<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <RelativeLayout
        android:id="@+id/main_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <Button
            android:id="@+id/title_bar_back"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_back_64"
            android:padding="20dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/action_bar_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:layout_weight="1"
            android:gravity="center_vertical|center|center_horizontal"
            android:text="@string/list_projects_title"
            android:textSize="24sp" />

        <Button
            android:id="@+id/title_bar_save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/ic_save_64"
            android:padding="26dp"
            android:visibility="gone" />
    </RelativeLayout>

    <ListView
        android:id="@+id/list_projects"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/main_action_bar" />

    <Button
        android:id="@+id/button_fab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="24dp"
        android:background="@drawable/ic_add_64"
        android:gravity="center_vertical|center|center_horizontal"
        android:padding="16dp"
        android:rotation="0" />

</RelativeLayout>